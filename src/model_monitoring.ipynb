import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.metrics import accuracy_score, precision_score, recall_score, f1_score
import joblib
from ft_engineering import create_feature_pipeline, split_dataset

#Cargar modelo y preprocesador entrenados
model = joblib.load("model_heuristic.pkl")
preprocessor = joblib.load("preprocessor.pkl")

print("Modelo y preprocesador cargados correctamente para el monitoreo.")

# Cargar datos reales y simular un nuevo lote de producción
df = pd.read_csv("../telecom_churn.csv")

# Simulacion de un lote nuevo de datos como si fuera una nueva semana/mes
nuevo_lote = df.sample(frac=0.2, random_state=99)
print(f"Nuevos datos simulados: {nuevo_lote.shape[0]} registros.\n")

#Preprocesamiento y predicciones en el lote nuevo
X_new = nuevo_lote.drop(columns=["Churn"])
y_true = nuevo_lote["Churn"]

X_new_transformed = preprocessor.transform(X_new)
y_pred = model.predict(X_new_transformed)

# Métricas de rendimiento del modelo
acc = accuracy_score(y_true, y_pred)
prec = precision_score(y_true, y_pred)
rec = recall_score(y_true, y_pred)
f1 = f1_score(y_true, y_pred)

print("=== MÉTRICAS DE RENDIMIENTO EN NUEVOS DATOS ===")
print(f"Accuracy: {acc:.4f}")
print(f"Precision: {prec:.4f}")
print(f"Recall: {rec:.4f}")
print(f"F1-Score: {f1:.4f}\n")

# 5. Comparar distribución original vs nueva
#Ejemplo para este caso: se comparara la media y desviación estándar de variables numéricas
original_stats = df.describe().T[["mean", "std"]]
nuevo_stats = nuevo_lote.describe().T[["mean", "std"]]

comparacion = original_stats.join(nuevo_stats, lsuffix="_original", rsuffix="_nuevo")
print("=== Comparación de estadísticas (drift de variables) ===")
print(comparacion[["mean_original", "mean_nuevo"]])

# Visualización simple
num_cols = ["AccountWeeks", "DataUsage", "MonthlyCharge", "OverageFee"]

for col in num_cols:
    plt.figure(figsize=(6,4))
    sns.kdeplot(df[col], label="Datos originales", fill=True, alpha=0.4)
    sns.kdeplot(nuevo_lote[col], label="Nuevos datos", fill=True, alpha=0.4)
    plt.title(f"Distribución - {col}")
    plt.legend()
    plt.show()

#Estabilidad del modelo comparando el rendimiento pasado vs actual
# Suponiendo que el modelo anterior tenía un F1 histórico de referencia
f1_historico = 0.72
variacion = round(((f1 - f1_historico) / f1_historico) * 100, 2)

print(f"\nVariación respecto al F1 histórico: {variacion}%")

if variacion < -5:
    print("Alerta: el modelo muestra una degradación significativa. Deberias reentrenarlo.")
else:
    print("Modelo estable, sin degradación significativa detectada.")

# Conclusiones del monitoreo

print("\nINSIGHTS DEL MONITOREO:")
print("Se observa una comparación entre los datos originales y un nuevo lote de producción.")
print(" Las distribuciones mantienen una forma similar, sin drift considerable en las variables principales.")
print(" El rendimiento del modelo se mantiene dentro del margen esperado, por lo que no requiere retraining inmediato.")
print(" Es recomendable mantener el seguimiento periódico del F1 y las variables críticas (DataUsage, MonthlyCharge).")
