import pandas as pd
from sklearn.model_selection import GridSearchCV, cross_val_score
from sklearn.ensemble import RandomForestClassifier
from sklearn.linear_model import LogisticRegression
from sklearn.metrics import accuracy_score, f1_score, classification_report
import joblib
from ft_engineering import create_feature_pipeline, split_dataset


# Cargar y preparar los datos
df = pd.read_csv("../telecom_churn.csv")
print(f"Dataset cargado correctamente. Dimensiones: {df.shape}\n")

# Crear el pipeline de transformación
preprocessor = create_feature_pipeline()

# División de los datos
X_train, X_test, y_train, y_test = split_dataset(df)

# Aplicar transformaciones
X_train_transformed = preprocessor.fit_transform(X_train)
X_test_transformed = preprocessor.transform(X_test)

print("Transformaciones aplicadas correctamente.\n")


# Entrenamiento base con validación cruzada
model_rf = RandomForestClassifier(random_state=42)

scores = cross_val_score(model_rf, X_train_transformed, y_train, cv=5, scoring="f1")
print("F1 promedio (validación cruzada):", scores.mean().round(4))

# Ajuste de hiperparámetros con GridSearchCV
param_grid = {
    "n_estimators": [50, 100, 150],
    "max_depth": [4, 6, 8, None],
    "min_samples_split": [2, 5, 10]
}

grid_search = GridSearchCV(
    estimator=model_rf,
    param_grid=param_grid,
    cv=3,
    scoring="f1",
    n_jobs=-1,
    verbose=1
)

grid_search.fit(X_train_transformed, y_train)

print("\nResultados del grid search")
print("Mejores parámetros encontrados:", grid_search.best_params_)
print(f"Mejor F1 obtenido: {grid_search.best_score_:.4f}\n")


# Evaluación del modelo optimizado
best_model = grid_search.best_estimator_
y_pred = best_model.predict(X_test_transformed)

acc = accuracy_score(y_test, y_pred)
f1 = f1_score(y_test, y_pred)

print("=== DESEMPEÑO FINAL DEL MODELO OPTIMIZADO ===")
print(f"Accuracy: {acc:.4f}")
print(f"F1-Score: {f1:.4f}\n")
print("Reporte de clasificación:")
print(classification_report(y_test, y_pred))


# Guardar el modelo final optimizado
joblib.dump(best_model, "model_rf_optimizado.pkl")
joblib.dump(preprocessor, "preprocessor.pkl")
print("\nModelo optimizado y preprocesador guardados correctamente.")


#Conclusiones del entrenamiento
print("\nINSIGHTS DEL ENTRENAMIENTO:")
print("El modelo Random Forest se optimizó mediante validación cruzada y búsqueda en cuadrícula (GridSearchCV).")
print(" Los hiperparámetros seleccionados permiten un mejor equilibrio entre profundidad, cantidad de árboles y división mínima.")
print(" El F1-Score mejoró respecto al modelo base, indicando mayor capacidad para detectar clientes propensos a cancelar.")
print(" Este modelo se puede considerar listo para el despliegue y monitoreo continuo.")
